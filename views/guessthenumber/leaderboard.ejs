<section id="leaderboard" class="text-center">

  <h1 class="mt-sm-5">Leaderboards</h1>
  <div class="container d-flex justify-content-center align-items-center mt-sm-5 text-center mb-5 w-100">
    <table class="table table-striped table-sm d-none" id="example">
      <thead>
        <tr>
          <th class="px-4">#</th>
          <th class="px-4">place</th>
          <th class="px-4">player</th>
          <th class="px-4">range</th>
          <th class="px-4">max seconds</th>
          <th class="px-4">max tries</th>
          <th class="px-4">num guesses</th>
          <th class="px-4">time</th>
          <th class="px-4">secret number</th>
          <th class="px-4">cheated</th>
          <th class="px-4">play date</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>

    <div class="table-toggle fs-1 p-5" onclick="this.classList.add('d-none'); document.getElementById('example').classList.remove('d-none');;">
      <u>Show</u>
    </div>
</section>


